<%= form_with(model: @inn) do |f| %>
  <%= f.label :brand_name %>
  <%= f.text_field :brand_name %><br>
  <%= f.label :legal_name %>
  <%= f.text_field :legal_name %><br>
  <%= f.label :vat_number%>
  <% if action_name == 'edit' %>
    <%= @inn.vat_number  %><br><br>
  <% else %>
    <%= f.text_field :vat_number %><br><br>
  <% end %>  
  <%= f.label :phone %>
  <%= f.telephone_field :phone %><br>
  <%= f.label :email %>
  <%= f.email_field :email %><br><br>
  <%= f.label :address %>
  <%= f.text_field :address %><br>
  <%= f.label :zone %>
  <%= f.text_field :zone %><br>
  <%= f.label :city %>
  <%= f.text_field :city %><br>
  <%= f.label :state %>
  <%= f.text_field :state %><br>
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %><br><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br><br>
  <%= f.label :payment_options %>
  <%= f.check_box_tag : %><br>
  <%= f.label :pet_friendly %>
  <%= f.check_box :pet_friendly %><br>
  <%= f.label :wheelchair_accessible %>
  <%= f.check_box :wheelchair_accessible %><br>
  <%= f.label :rules %>
  <%= f.text_area :rules %><br><br>
  <%= f.label :check_in %>
  <%= f.time_field :check_in %><br>
  <%= f.label :check_out %>
  <%= f.time_field :check_out %><br>
  <%= f.label :active %>
  <%= f.check_box :active %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <br>
  <%= f.submit %>
<% end %>