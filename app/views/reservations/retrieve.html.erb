<h5><br>Gostaria de continuar com a sua reserva? </h5>

<div id="all">
    
  <% @session_reservations.each do |reservation| %>
    <% if reservation.status == 'available' && reservation.created_at > (Time.zone.now - 48.hours) %>
    <nav class="list">
        <%= "#{reservation.room.inn.city}/#{reservation.room.inn.state}" %><br>
        <%= reservation.room.inn.brand_name %> / <%= reservation.room.name %><br>
        <%= number_to_currency(reservation.estimate) %><br>
        <%= "De #{l(reservation.start_date)} a #{l(reservation.end_date)}" %><br>
        <strong><%= button_to "Continuar Reserva", room_reservation_path(reservation.room, reservation), method: :get %></strong><br>
    </nav>
    <% end %>
  <% end %>
</div>