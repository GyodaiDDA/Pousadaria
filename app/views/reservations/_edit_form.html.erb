<div class="list">
  <%= form_with(model: [@room, @reservation]) do |f| %>

    <%= f.label :guests, class: 'inline' %>
    <%= f.select :guests, 1..@room.max_guests, {}, class: 'inline' %>
    
    <%= f.hidden_field :room_id, value: params[:room_id] %>
    <br>
    <%= f.submit 'Fazer Reserva', class: 'inline-button' %>
  <% end %>
</div>