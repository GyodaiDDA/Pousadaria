<table id="all" class="list">
  <tr>
    <td>Código</td>
    <td>Pousada</td>
    <td>Cidade</td>
    <td>Período</td>
    <td>Status</td>
  </tr>
  <% @reservations.each do |reservation| %>
  <tr>
    <td>
      <%= link_to reservation.code, room_reservation_path(reservation.room, reservation) %>
    </td>
    <td>
      <%= reservation.room.inn.brand_name %>
    </td>
    <td>
      <%= "#{reservation.room.inn.city}/#{reservation.room.inn.state}" %>
    </td>
    <td>
      <%= "#{l(reservation.start_date)} a #{l(reservation.end_date)}" %>
    </td>
    <td>
      <%= reservation.status %>
    </td>
  <% end %>
</div>